{
  "name": "sourc3-client-masternet",
  "version": "1.0.0",
  "description": "SOURC3 client for 'masternet'",
  "main": "bundle/main.js",
  "scripts": {
    "start": "export NODE_ENV=dev; electron --inspect dist/main",
    "app:dist": "electron-builder",
    "app:dir": "electron-builder --dir",
    "build": "tsc --project .",
    "bundle": "webpack",
    "electron:bundle": "electron-webpack --config webpack.config.js",
    "watch": "tsc --watch"
  },
  "keywords": [
    "BEAM",
    "wallet",
    "cryptocurrency",
    "mimblewimble"
  ],
  "author": "Beam Privacy",
  "license": "Apache-2.0",
  "dependencies": {
    "commander": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^11.0.0",
    "express": "^4.17.2",
    "ipc-express": "^0.3.1",
    "nodegit": "^0.28.0-alpha.10",
    "request": "^2.88.2",
    "sqlite3": "^5.0.2",
    "typeorm": "^0.2.43",
    "winston": "^3.4.0"
  },
  "devDependencies": {
    "@mapbox/node-pre-gyp": "^1.0.8",
    "@types/commander": "^2.12.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/nodegit": "^0.27.9",
    "@types/request": "^2.48.8",
    "@types/sqlite3": "^3.1.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "copy-webpack-plugin": "^10.2.4",
    "electron": "^18.1.0",
    "electron-builder": "^22.14.13",
    "electron-rebuild": "^3.2.7",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.29.4",
    "jest": "^27.4.7",
    "node-loader": "^2.0.0",
    "nodemon": "^2.0.15",
    "sqlite3-loader": "^0.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0"
  },
  "build": {
    "files": [
      "front/dist/**",
      "bundle/*",
      "dist/preload.js",
      "!**/node_modules/**/*",
      "!**/*.json"
    ],
    "extraResources": [
      "beam-res/**",
      ".env",
      "git-remote-sourc3*",
      "sourc3-remote.cfg"
    ],
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "sign": false
    }
  }
}